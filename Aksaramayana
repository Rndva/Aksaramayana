        { q: "Laksmana membunuh Indrajit (Anak Rahwana) dengan...", a: ["Panah Guwawijaya", "Gada Cakrabaswara", "Nagapasa"], c: "Panah Guwawijaya", h: "Laksmana menuju 'Tap Ultimate' menggunakan Guwawijaya.", r: "Ini salah satu momen 'Play' paling epik di Ramayana." },
        { q: "Rahwana menculik Sinta saat Rama sedang...", a: ["Sedang Hunting", "Sedang Meditasi", "Sedang Tidur", "AFK"], c: "Sedang Meditasi", h: "Rahwana nyuri saat sistem 'down' (Rama meditasi).", r: "Menculik saat Rama sedang tidak ada bodyguard (Laksmana)." },
        { q: "Apakah Rahwana memiliki ilmu 'Pancasona'?", a: ["Tidak, itu mitos", "Ya, tapi butuh banget", "Ya, karena adiknya"], c: "Ya, tapi butuh banget", hint: "Atribut kesaktian yang hanya lemah saat offline (touch ground).", r: "Pancasona membuat Rahwana sangat susah dikalahkan." }

